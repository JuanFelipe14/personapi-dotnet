@model personapi_dotnet.Models.Entities.Estudio

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Está seguro de eliminar?</h3>
<div>
    <h4>Estudio</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fecha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            Universidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Univer)
        </dd>
        <dt class = "col-sm-2">
            Persona
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CcPer)
        </dd>
        <dt class = "col-sm-2">
            Profesión
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdProf)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProf" />
        <input type="hidden" asp-for="CcPer" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la lista</a>
    </form>
</div>
